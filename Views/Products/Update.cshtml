@model WebShopInventory.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Product</h4>

<div>
    <form asp-action="Update" enctype="multipart/form-data">
     <a class="btn btn-outline-success me-2" asp-action="Index">< Back to List</a> <input type="submit" value="Save" class="btn btn-primary" />
    <hr />    
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Timestamp" />
        <input type="hidden" asp-for="ImagePath" />
         <div class="container">
          <div class="row">
            <div class="col-sm-3">             
              <div class="row">
                <img src="@("~/uploads/" + Model.ImagePath)" asp-append-version="true" width="90%" />
              </div>
              <br/>
              <div class="row">
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
              </div>
            </div>
            <div class="col-sm-9">
              <div class="row">
                <dl class="row">
                  <dt class="col-sm-2">
                    <label asp-for="Title" class="control-label"></label>
                  </dt>
                  <dd class="col-sm-10 form-group">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                  </dd>
                  <dt class="col-sm-2"> 
                      @Html.DisplayNameFor(model => model.Code) </dt>
                  <dd class="col-sm-10 form-group">
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                  </dd>
                  <dt class="col-sm-2 "> 
                      @Html.DisplayNameFor(model => model.Stock) </dt>
                  <dd class="col-sm-10 form-group">
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                  </dd>
                  <dt class="col-sm-2"> 
                      @Html.DisplayNameFor(model => model.Price) </dt>
                  <dd class="col-sm-10 form-group">
                    <input asp-for="Price" class="form-control" type="text"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                  </dd>

                  <dt class="col-sm-2">
                    <label asp-for="ProductCategoryId" class="control-label"></label>
                  </dt>
                  <dd class="col-sm-10 form-group">
                    <select asp-for="ProductCategoryId" class="form-control" asp-items="@ViewBag.selectListItems"></select>
                    <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                  </dd>

                  <dt class="col-sm-2"> 
                      @Html.DisplayNameFor(model => model.Description) </dt>
                  <dd class="col-sm-10 form-group">
                     <textarea class="form-control" asp-for="Description" rows="5" cols="140"></textarea>
                     <span asp-validation-for="Description" class="text-danger"></span>
                  </dd>
                  </dl>
              </div>
            </div>            
          </div>           
        </div>  
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}