@model WebShopInventory.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>@(Model.Title) Details</h1>

<div>
     <a class="btn btn-outline-success me-2" asp-action="Index">< Back to List</a>  <a class="btn btn-outline-success me-2" asp-action="Update" asp-route-id="@Model.Id">Edit</a>  <a class="btn btn-outline-success me-2" asp-action="Create" asp-route-id="@Model.Id">Add New</a>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <img src="@("~/uploads/" + Model.ImagePath)" asp-append-version="true" width="100%" />
            </div>
            <div class="col-sm-8">
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Code)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Code)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Stock)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Stock)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>        
                </dl>                
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-10">
            <strong>@Html.DisplayNameFor(model => model.Description)</strong>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
            @Html.DisplayFor(model => model.Description)
            </div>
        </div>
    </div>  
</div>
